pipeline {
    agent {
        docker {
            image 'node:14'  // Verwendung des offiziellen Node.js-Images
            label 'docker-agent'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Testing file') {
            steps {
                script {
                    def fileExists = fileExists('app.js')
                    if (!fileExists) {
                        error("app.js Datei fehlt!")
                    }
                }
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'npm start'
            }
        }
    }
    post {
        always {
            sh 'rm -rf node_modules'
        }
    }
}
