pipeline {
    agent {
        label 'docker_agent'  // Verwendet den Agenten mit dem Namen 'docker-agent'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm  // FÃ¼hrt einen Checkout des aktuellen Git-Repositorys durch
            }
        }

        stage('Setup Test Environment') {
            steps {
                sh '''
                    echo "Setting up test environment..."
                    sleep 10 
                    echo "Test environment setup complete."
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    echo "Running tests..."
                    sleep 5 
                    echo "Tests completed."
                '''
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
