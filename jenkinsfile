pipeline {
    agent {
        label 'docker-agent'  // Verwendet den Agenten mit dem Namen 'docker-agent'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm  // Führt einen Checkout des aktuellen Git-Repositorys durch
            }
        }

        stage('Setup Test Environment') {
            steps {
                sh '''
                    echo "Setting up test environment..."
                    sleep 10  // Simuliert die Einrichtung der Testumgebung
                    echo "Test environment setup complete."
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    echo "Running tests..."
                    sleep 5  // Simuliert das Ausführen von Tests
                    echo "Tests completed."
                '''
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            // Hier können Sie Aufräumarbeiten hinzufügen, falls erforderlich
        }
    }
}
